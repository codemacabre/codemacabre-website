---
import Tag from '~/components/Tag.astro';
const { category, date, description, title, url } = Astro.props
---
<li>
  <a class="title" href={url}>{title}</a>
  <span class="meta">
    <Tag text={category} />
    <span class="dates">(<time datetime={date.toString()}>{new Date(date).toISOString().slice(0,10)}</time>)</span>
  </span>
  <p class="description">{description}</p>
</li>

