---
const path = new URL(Astro.request.url).pathname;
---
<header>
  <nav>
    <a class="title" href="/">Code&nbsp;Macabre</a>
    <input type="checkbox" id="main-menu-toggle" class="sr-only" tabindex="0" />
    <label for="main-menu-toggle" class="hamburger">
      <span class="slice"></span>
      <span class="slice"></span>
      <span class="slice"></span>
      <span class="sr-only">Menu</span>
    </label>
    <ul class="menu">
      <li class="mobile-only">
        <a class={path === '/' ? 'selected' : ''} href="/">Home</a>
      </li>
      <li>
        <a class={path.includes('/projects') ? 'selected' : ''} href="/projects">Projects</a>
      </li>
      <li>
        <span class="wide-only">/</span>
        <a class={path.includes('/notes') ? 'selected' : ''} href="/notes">Notes</a>
      </li>
      <li>
        <span class="wide-only">/</span>
        <a class={path.includes('/about') ? 'selected' : ''} href="/about">About</a>
      </li>
    </ul>
  </nav>
</header>
